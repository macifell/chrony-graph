#!/bin/bash
TERMINAL=$1

LINSCALELIMIT=1
for stat in statistics.*; do
    LINSCALELIMIT=`../bin/linscalelimit $LINSCALELIMIT 5 99 $stat`
    echo $stat $LINSCALELIMIT
done
LINSCALELIMIT=`echo $LINSCALELIMIT | ../bin/mul 1000000`

(
echo "load '../gnuplot/colors.pal'"
../bin/graph-header all-skew $TERMINAL $LINSCALELIMIT "%1.1f Âµs/s" "All Clocks (Skew)" "set yrange [-10:10]"
../bin/foreach-stat "'__FILE__' using 1:(\$6*1000000) title '__TITLE__' with line \\"
echo 
) | gnuplot
