#!/bin/bash
TERMINAL=$1

LINSCALELIMIT=1
for stat in statistics.*; do
    LINSCALELIMIT=`../bin/linscalelimit $LINSCALELIMIT 5 80 $stat`
    echo $stat $LINSCALELIMIT
done
LINSCALELIMIT=`echo $LINSCALELIMIT | ../bin/mul 1000000`

(
echo "load '../gnuplot/colors.pal'"
../bin/graph-header all-skew $TERMINAL $LINSCALELIMIT "%1.1f ppm" "All Clocks (Skew)" "set key top center horizontal box lc '#000000' opaque samplen 1 width -1"
../bin/foreach-stat "'__FILE__' using 1:(\$7*1000000) title '__TITLE__' with line \\"
echo 
) | gnuplot
