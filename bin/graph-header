#!/bin/bash

BASENAME=$1
TERMINAL=$2
LINSCALELIMIT=$3
FORMAT=$4
TITLE=$5
CUSTOM=$6
LINEAR=$7

if [ -n "$FORCE_LINEAR" ] || [ "$LINEAR" = "LINEAR" ]; then
  YTICS=""
  YSCALE=""
else
  YTICS="("`../bin/linlogytics $LINSCALELIMIT`")"
  read -r -d '' YSCALE <<EOF
flogy(y) = ((log(abs(y))-log($LINSCALELIMIT))/log(10)+2)*$LINSCALELIMIT*0.5
glogy(y) = exp((log(10)*(abs(y)/($LINSCALELIMIT)-1)/0.5)+log($LINSCALELIMIT))
f(y) = (abs(y) < $LINSCALELIMIT) ? y : sgn(y)*flogy(y)
g(y) = (abs(y) < $LINSCALELIMIT) ? y : sgn(y)*glogy(y)
set nonlinear y via f(y) inverse g(y)
EOF
fi

cat <<EOF
set terminal $TERMINAL size 900,600 font "Helvetica,14"
set xdata time
set timefmt "%s"
set output "$BASENAME.$TERMINAL"
set grid
set xlabel "Time"
set format x "%d-%H:%M"
set xtic rotate by -45 scale 0
set ylabel ""
set ytics format "$FORMAT" nomirror $YTICS
set title "$TITLE" font "Helvetica,24"
set key bottom right box lc "#000000" width -3 opaque
$YSCALE
$CUSTOM
set lmargin 12
set rmargin 12
plot \\
EOF
